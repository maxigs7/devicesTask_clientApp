  "version": "0.2.0",
  "configurations": [
    {
      "name": "ReactScripts: Current Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/react-scripts/bin/react-scripts",
      "args": ["test", "--runTestsByPath", "${relativeFile}", "--runInBand", "--verbose", "--updateSnapshot"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
